# Manufacturing Copilot - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_TITLE="Manufacturing Copilot API"
APP_VERSION="1.0.0"
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://copilot:copilot_pwd@localhost:5432/manufacturing_db

# Authentication
VALID_AUTH_TOKEN_PREFIX="Bearer technician-"

# HuggingFace API (REQUIRED for model access via endpoints)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ChromaDB Configuration (Vector Database for RAG)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_db

# Model Endpoints (HuggingFace Inference API)
# Vision-Language Model for defect detection
VLM_MODEL_ID=Salesforce/blip2-opt-2.7b
# LLM for RAG and Report Generation
LLM_MODEL_ID=meta-llama/Llama-2-7b-chat-hf
# Embedding Model for RAG
EMBEDDING_MODEL_ID=sentence-transformers/all-MiniLM-L6-v2

# API Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30
TEMPERATURE=0.7
MAX_TOKENS=512

# GCP Configuration (for cloud deployment - optional for local dev)
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1

# Monitoring & Observability
ENABLE_TELEMETRY=true
